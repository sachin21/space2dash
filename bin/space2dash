#!/usr/bin/env ruby
# coding: utf-8

require 'space2dash'

CREATE_FLAGS = %w(-c --create)

args = ARGV.reject { |arg| CREATE_FLAGS.include?(arg) }
underscore_include_sentence = Space2dash.convert(args)

result =
  if ARGV.include?('-c') || ARGV.include?('--create')
    Space2dash.create_new_branch(result)
  else
    underscore_include_sentence
  end

puts result
